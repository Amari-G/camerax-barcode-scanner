<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:background="@color/black_color"
                    android:padding="15dp"
                    android:layout_marginBottom="15dp">
        
    
        <ImageView
                android:id="@+id/iv_complete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@drawable/green_toggle"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
        
        
        <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Read 10 Pages of Think and Grow Rich"
                android:textColor="@color/pac_yellow"
                android:textSize="13sp"
                android:lineSpacingExtra="7dp"
                style="@style/ArcadeTextView"
                android:layout_toStartOf="@id/iv_complete"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"/>
        
        <TextView
                android:id="@+id/tv_created_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created On: "
                android:textColor="@color/white"
                android:textSize="10sp"
                style="@style/ArcadeTextView"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="20dp"/>
        
        <TextView
                android:id="@+id/tv_created_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Wed 6/12/19"
                android:textColor="@color/white"
                android:textSize="10sp"
                style="@style/ArcadeTextView"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/tv_created_title"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"/>
        
        <TextView
                android:id="@+id/tv_completed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete By: "
                android:textColor="@color/white"
                android:textSize="10sp"
                style="@style/ArcadeTextView"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_below="@id/tv_created_value"
                android:layout_marginTop="20dp"/>
        
        <TextView
                android:id="@+id/tv_completed_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Wed 7/12/19"
                android:textColor="@color/white"
                android:textSize="10sp"
                style="@style/ArcadeTextView"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/tv_completed_title"
                android:layout_below="@id/tv_created_value"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"/>
    
        <TextView
                android:id="@+id/tv_credits_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credits: "
                android:textColor="@color/white"
                android:textSize="10sp"
                style="@style/ArcadeTextView"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_below="@id/tv_completed_value"
                android:layout_marginTop="20dp"/>
    
        <TextView
                android:id="@+id/tv_credits_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="50"
                android:textColor="@color/white"
                android:textSize="10sp"
                style="@style/ArcadeTextView"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/tv_credits_title"
                android:layout_below="@id/tv_completed_value"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"/>
    
    </RelativeLayout>

</layout>